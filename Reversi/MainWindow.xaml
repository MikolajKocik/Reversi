<Window x:Class="Reversi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reversi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="LawnGreen">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Game">
                <MenuItem Header="New single player game">
                    <MenuItem Header="Computer starts (brown)" 
                              Click="MenuItem_NewGameSinglePlayerComputerStarts_Click"/>
                    <MenuItem Header="You start (green)" 
                              Click="MenuItem_NewGameSinglePlayerYouStart_Click"/>
                </MenuItem>
                <MenuItem Header="New two player game" 
                          Click="MenuItem_NewGameTwoPlayers_Click"/>
                <Separator/>
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Move hint" Click="MenuItem_MoveHint_Click"/>
                <MenuItem Header="Computer move" Click="MenuItem_ComputerMove_Click"/>
                <Separator />
                <MenuItem Header="Game rules" Click="MenuItem_GameRules_Click"/>
                <MenuItem Header="Computer strategy" Click="MenuItem_ComputerStrategy_Click"/>
                <Separator />
                <MenuItem Header="About" Click="MenuItem_About_Click"/>
            </MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="boardGrid" Grid.Column="0" Margin="10,10,10,10" Background="Beige"/>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="playerColorButton" Grid.Row="0" Width="30" Height="30"
                        Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="PlayerColorButton_Click"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Margin="10,0,0,0" Foreground="Green" Text="Green: ">
                    <Run x:Name="GreenFieldCount" Text="0"/>
                </TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" Margin="10,0,0,0" Foreground="Brown" Text="Brown: ">
                    <Run x:Name="BrownFieldCount" Text="0"/>
                </TextBlock>
                <ListBox x:Name="GreenMovesList" Grid.Row="2" Grid.Column="0" Margin="10,0,10,10"/>
                <ListBox x:Name="BrownMovesList" Grid.Row="2" Grid.Column="1" Margin="10,0,10,10"/>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
